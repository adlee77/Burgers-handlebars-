<h1>Burgers!</h1>

<h2>Eat a Burger</h2>

<form class="create-form">
  <div class="form-group">
    <label for="burger">Type of Burger:</label>
    <input type="text" id="burger" name="name">
  </div>

    <button type="submit">Add Burger</button>
</form>

<h3>Uneaten</h3>
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>{{name}}<button class="eat" data-id="{{id}}">Eat it</button></li>
    {{/unless}}
    {{/each}}
</ul>

<h3>Eaten</h3>
<ul>
 {{#each burgers}}
 {{#if devoured}}
 <li>{{name}}<button class="remove" data-id="{{id}}">Remove</button></li>
 {{/if}}
 {{/each}}
</ul>